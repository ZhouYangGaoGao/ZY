			"quantity":"",//购买数量
			"price":""//购买价格
	    		buyJournalRs[{
				"buyJournalRId":"",//购买商品ID
				"buyJournalId":"",//购买商品ID
				"goodsId":"",//商品ID
				"consumptionRId":"",//购买流水ID
				"consumptionId":"",//购买流水ID
				"quantity":"",//退货数量
				"price":""//价格
			}]

		}
		……
		]
	  }


